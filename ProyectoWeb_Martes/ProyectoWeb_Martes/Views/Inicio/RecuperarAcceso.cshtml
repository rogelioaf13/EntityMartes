
@{
    ViewBag.Title = "RecuperarAcceso";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<div class="container">
    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-3" d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">| Recuperar el acceso |</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Identificación">
                                    </div>
                                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                                        Procesar
                                    </a>
                                    <hr>

                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesion</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("RegistrarUsuario","Inicio")">Crear Cuenta!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
